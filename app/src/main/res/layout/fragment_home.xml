<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="8dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/plin_logo"
                    android:adjustViewBounds="true"
                    android:layout_marginLeft="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¿Conoces todo sobre Plin?"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textSize="12sp"
                    android:textColor="@color/azul_logo"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="50dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Descúbrelo"
                        android:textColor="@color/azul_logo"
                        android:textSize="11sp"
                        android:layout_gravity="center"/>
                    <Spinner
                        android:id="@+id/spn_descubrelo"
                        android:layout_width="34dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:outlineSpotShadowColor="@color/azul_logo"/>
                </LinearLayout>
            </LinearLayout>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:paddingStart="30dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:src="@drawable/perfil_cliente_01" />
                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:text="Rios Julca Angel"
                            android:textColor="@color/black"
                            android:textSize="14sp" />
                        <Button
                            android:id="@+id/btn_cliente01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ver Perfil"
                            android:textAllCaps="false"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_menu_account" />
                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:text="Nima Zorrilla Maria"
                            android:textColor="@color/black"
                            android:textSize="14sp" />
                        <Button
                            android:id="@+id/btn_cliente02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ver Perfil"
                            android:textAllCaps="false"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_menu_account" />
                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:text="Alcanta Bautista Liset"
                            android:textColor="@color/black"
                            android:textSize="14sp" />
                        <Button
                            android:id="@+id/btn_cliente03"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ver Perfil"
                            android:textAllCaps="false"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_menu_account" />
                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:text="Montesinos Romero Aris"
                            android:textColor="@color/black"
                            android:textSize="14sp" />
                        <Button
                            android:id="@+id/btn_cliente04"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ver Perfil"
                            android:textAllCaps="false"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_menu_account" />
                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:text="Pacheco Requez Jesús"
                            android:textColor="@color/black"
                            android:textSize="14sp" />
                        <Button
                            android:id="@+id/btn_cliente05"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ver Perfil"
                            android:textAllCaps="false"/>
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>