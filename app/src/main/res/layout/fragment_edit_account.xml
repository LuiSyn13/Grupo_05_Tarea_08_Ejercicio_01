<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditAccountFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar cuenta"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:padding="10dp"
            android:background="@color/azul_logo"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cliente:"
                    android:textColor="@color/verde_logo"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginEnd="5dp"/>
                <TextView
                    android:id="@+id/tv_date_client"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Apellidos y Nombres"
                    android:layout_marginStart="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N° Cuenta:"
                    android:textColor="@color/verde_logo"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginEnd="5dp"/>
                <TextView
                    android:id="@+id/tv_num_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NIBK001"
                    android:layout_marginStart="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saldo:"
                    android:textColor="@color/verde_logo"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginEnd="5dp"/>
                <TextView
                    android:id="@+id/tv_saldo_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S/. 0"
                    android:layout_marginStart="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estado:"
                    android:textColor="@color/verde_logo"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginEnd="5dp"/>
                <TextView
                    android:id="@+id/tv_aper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Aperturada"
                    android:layout_marginStart="15dp"/>
                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rbtn_estado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aperturar"
                    android:textSize="18sp"
                    android:layout_marginStart="15dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N° de Operaciones:"
                android:textColor="@color/verde_logo"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:background="@drawable/formulario_content_azul">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Depositos:"
                        android:textColor="@color/azul_logo"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginEnd="5dp"/>
                    <TextView
                        android:id="@+id/tv_cant_deposito"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:background="@drawable/formulario_content_azul">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Retiros:"
                        android:textColor="@color/azul_logo"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginEnd="5dp"/>
                    <TextView
                        android:id="@+id/tv_cant_retiro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</FrameLayout>