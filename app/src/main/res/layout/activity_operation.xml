<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OperationActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="50dp">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_deposito_op"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="DepÃ³sito"
            android:textSize="18sp"
            app:icon="@drawable/ic_money_24"
            app:iconGravity="textTop"
            app:iconSize="40dp"
            android:textColorHint="@color/white"
            android:background="@drawable/botom_01_roundered_02"
            app:backgroundTint="@color/verde_logo"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="10dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_retiro_op"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="Retiro"
            android:textSize="18sp"
            app:icon="@drawable/ic_arrow_downward_24"
            app:iconGravity="textTop"
            app:iconSize="40dp"
            android:textColorHint="@color/white"
            android:background="@drawable/botom_01_roundered_02"
            app:backgroundTint="@color/orange"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="10dp"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="Transf. entre sus cuentas"
            android:textSize="18sp"
            app:icon="@drawable/ic_currency_exchange_24"
            app:iconGravity="textTop"
            app:iconSize="40dp"
            android:textColorHint="@color/white"
            android:background="@drawable/botom_01_roundered_02"
            app:backgroundTint="@color/blue_350"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="10dp"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="Transf. entre terceros"
            android:textSize="18sp"
            app:icon="@drawable/ic_send_24"
            app:iconGravity="textTop"
            app:iconSize="40dp"
            android:textColorHint="@color/white"
            android:background="@drawable/botom_01_roundered_02"
            app:backgroundTint="@color/yellow"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>